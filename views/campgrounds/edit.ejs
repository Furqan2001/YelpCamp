<%- include("../partials/header") %>

<div class="container">
	<h1 class="text-center">Edit <%= campground.name %></h1>
	<div class="row" style="margin: 25px auto; width: 38%;">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST"  enctype="multipart/form-data">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" id="name" type="text" name="updatedCampground[name]" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<label for="price">Price</label>
				<input class="form-control" id="price" type="number" name="updatedCampground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
			</div>	
			<div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
			<div class="form-group">
				<label for="description">Description</label>
				<textarea id="edit-text" id="description" class="form-control" name="updatedCampground[description]" required><%= campground.description%></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>		
		</form>
	<a href="/campgrounds/<%= campground._id %>">Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>